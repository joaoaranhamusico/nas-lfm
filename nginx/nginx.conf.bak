# File: /etc/nginx/nginx.conf
# Description: Clean core (no custom rate/conn maps), hardened defaults + extended logs
# Author: Jo√£o Aranha
# Last Modified: 2025-11-05

user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
    # Generous headroom
    worker_connections 4096;
    # multi_accept on;
}

http {
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    types_hash_max_size 2048;
    server_tokens off;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # TLS policy (site loads certbot ssl options)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;

    # Extended log format (include upstream timings)
    log_format main_ext '$remote_addr - $remote_user [$time_local] '
                        '"$request" $status $body_bytes_sent '
                        '"$http_referer" "$http_user_agent" '
                        'rt=$request_time urt=$upstream_response_time '
                        'uaddr=$upstream_addr lim=$limit_req_status';

    access_log /var/log/nginx/access.log main_ext;
    error_log  /var/log/nginx/error.log;

    # Only WS/SSE upgrade helper (VALID map with 2 params)
    map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
    }

    # Load global snippets and vhosts
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
